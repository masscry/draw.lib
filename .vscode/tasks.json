{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build all (debug)",
      "type": "shell",
      "command": "cmake --build ./build -- -j",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build all (release)",
      "type": "shell",
      "command": "cmake --build ./.release -- -j",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}